{
    "name": "mmoreram/translation-server",
    "type": "library",
    "description": "PHP translation server",
    "keywords": [
        "php", "translation", "server"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        }
    ],
    "require": {
        "php": "^5.4|^7.0",
        "symfony/console": "^2.7|^3.0",
        "symfony/process": "^2.7|^3.0",
        "symfony/finder": "^2.7|^3.0",
        "symfony/filesystem": "^2.7|^3.0",
        "symfony/yaml": "^2.7|^3.0",
        "symfony/event-dispatcher": "^2.7|^3.0",
        "symfony/property-access": "^2.7|^3.0",

        "elcodi/core": "^1.0.2",
        "stichoza/google-translate-php": "^3.1"
    },
    "require-dev": {
        "fabpot/php-cs-fixer": "1.11",
        "mmoreram/php-formatter": "1.1.0",
        "phpunit/phpunit": "4.8.19"
    },
    "bin": [
        "bin/translation-server"
    ],
    "config": {
        "bin-dir": "bin"
    },
    "autoload": {
        "psr-4": {
            "Mmoreram\\TranslationServer\\": "src/TranslationServer"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mmoreram\\TranslationServer\\Tests\\": "tests/TranslationServer"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "scripts": {
        "check-style": [
            "bin/php-cs-fixer fix --config-file=.php_cs || true",
            "bin/php-formatter f:h:f src || true",
            "bin/php-formatter f:u:s src || true"
        ],
        "test": "phpunit"
    }
}
